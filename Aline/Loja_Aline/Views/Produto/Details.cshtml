@model business.Produto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Comentários do Produto</label>
        </dt>

        <dd>
            @{
                foreach (var comentar in Model.Comentario)
                {
                    <p>
                       @Html.Action("UsuarioComentario", "Comentario", new { email = comentar.Email })   comentou:
                    </p>
                    <p>
                        @comentar.Comentar
                    </p>
                    <hr />
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdPrduto }) |
    @Html.ActionLink("Back to List", "Index")
</p>
