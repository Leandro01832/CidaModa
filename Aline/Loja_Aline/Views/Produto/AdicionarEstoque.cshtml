@model business.Produto
@{
    ViewBag.Title = "AdicionarEstoque";
}

<h2>AdicionarEstoque</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Produto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPrduto)
        @Html.HiddenFor(model => model.Imagem)
        @Html.HiddenFor(model => model.Preco)
        @Html.HiddenFor(model => model.Estoque)

        <label class="control-label col-md-2">Numero de produtos a serem adicionados: </label>
        <input class="form-control" type="text" id="adicionar" name="adicionar"  />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

