@model IEnumerable<business.Destino>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Destinos</h2>

    <p>
        @Html.ActionLink("Criar novo destino", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ativacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estados)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estados)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdDestino }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdDestino }) |
                    @Html.ActionLink("Apagar", "Delete", new { id = item.IdDestino })
                </td>
            </tr>
        }

    </table>
</div>
