@model IEnumerable<business.Medida>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Medidas</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item.IdItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.encomenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quadril)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ombro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Torax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cintura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comprimento)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.IdItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.encomenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quadril)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ombro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Torax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cintura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comprimento)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdMedida }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdMedida }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdMedida })
                </td>
            </tr>
        }

    </table>
</div>
