@model IEnumerable<business.ItemPedido>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Itens</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pedido.IdPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.produto.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pedido.IdPedido)
                </td>
                <td>
                    @{
                        if (item.produto.Imagem != null)
                        {
                            <img src="@Url.Content(item.produto.Imagem)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdItem }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdItem }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdItem })
                </td>
            </tr>
                        }

    </table>
</div>
