@model IEnumerable<business.Vestido>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo vestido", "Gereciamento_vestido_criar", null, new { @class = "btn btn-default" })
</p>

<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @{
                        if (item.Imagem != null)
                        {
                            <img src="@Url.Content(item.Imagem)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Gereciamento_vestido_editar", new { id = item.IdPrduto }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Detalhes", "Gereciamento_vestido_detalhes", new { id = item.IdPrduto }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Deletar", "Gereciamento_vestido_deletar", new { id = item.IdPrduto }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Adicionar produtos ao estoque", "Gereciamento_vestido_adicionar", new { id = item.IdPrduto }, new { @class = "btn btn-default" })
                </td>
            </tr>
                        }

    </table>
</div>


