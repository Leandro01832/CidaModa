@model IEnumerable<business.Comentario>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Comentários</h2>

    <p>
        @Html.ActionLink("Adicionar comentário", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto.IdPrduto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentar)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.IdPrduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comentar)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdComentario }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdComentario }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.IdComentario })
                </td>
            </tr>
        }

    </table>
</div>
