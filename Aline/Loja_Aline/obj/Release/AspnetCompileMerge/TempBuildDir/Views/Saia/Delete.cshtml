@model business.Saia

@{
    ViewBag.Title = "Apagar";
}

<h2>Apagar</h2>

<h3>Deseja realmente apagar  esta saia?</h3>
<div>
    <h4>Saia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>

        <dd>
            @{
                if (Model.Imagem != null)
                {
                    <img src="@Url.Content(Model.Imagem)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Preco)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preco)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Apagar" class="btn btn-default" /> |
            @Html.ActionLink("Voltar para a lista", "Index")
        </div>
    }
</div>
