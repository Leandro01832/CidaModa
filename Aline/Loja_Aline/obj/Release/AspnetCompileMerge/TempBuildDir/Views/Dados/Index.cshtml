@model IEnumerable<PagSeguro.Dados>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Dados de pagamento</h2>

    <p>
        @Html.ActionLink("Criar novo dado", "Create")
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.NumeroPedido)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.CodigoAcesso)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NumeroPedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoAcesso)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.DadosId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.DadosId }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.DadosId }) |
                    @Html.ActionLink("Atualizar status", "AtualizarStatus", new { id = item.CodigoAcesso }) |
                </td>
            </tr>
        }

    </table>
</div>
