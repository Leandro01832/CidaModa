@model IEnumerable<business.Imagem>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2>Imagens</h2>

    <p>
        @Html.ActionLink("Adicionar nova imagem ao produto", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemProduto)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        if (item.Produto.Imagem != null)
                        {
                            <img src="@Url.Content(item.Produto.Imagem)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                        }
                    }
                </td>
                <td>
                    @{
                        if (item.Produto.Imagem != null)
                        {
                            <img src="@Url.Content(item.ImagemProduto)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                        }
                    }
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdImagem }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.IdImagem }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.IdImagem })
                </td>
            </tr>
                        }

    </table>
</div>
